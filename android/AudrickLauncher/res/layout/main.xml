<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" >

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/robot_ip_edit"
        android:layout_height="wrap_content"
        android:text="192.168.43.104"
        android:hint="Robot Ip"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/behavior_name_edit"
        android:layout_height="wrap_content"
        android:text="robotgauchesmartphone-1880fa/behavior_1"
        android:hint="Behavior Name"/>
    <Button
        android:layout_width="match_parent"
        android:onClick="connect"
        android:layout_height="wrap_content"
        android:text="Connect"/>
    <Button
        android:layout_width="match_parent"
        android:onClick="stopAll"
        android:layout_height="wrap_content"
        android:text="Stop All"/>
    <Button
        android:layout_width="match_parent"
        android:onClick="disconnectAll"
        android:layout_height="wrap_content"
        android:text="Disconnect All"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>

